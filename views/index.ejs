<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Task Manager</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 flex flex-col items-center">
      <div class="form p-10 w-full max-w-2xl">
        <form action="/create" method="POST" class="space-y-4">
          <!-- Title Input -->
          <input
            name="title"
            class="block w-full rounded-md px-5 py-3 bg-zinc-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
            type="text"
            placeholder="Title goes here.."
            name="title"
            required
          >

          <!-- Task Details Textarea -->
          <textarea
            name="details"
            class="block w-full rounded-md px-5 py-3 resize-none bg-zinc-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 h-32"
            placeholder="Write your task details here..."
            name="details"
            required
          ></textarea>

          <!-- Submit Button -->
          <input
            class="mt-2 w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-md cursor-pointer transition duration-200"
            type="submit"
            value="Create Task"
          >
        </form>
      </div>

      <!-- Task Cards Section -->
      <div class="tasks flex flex-wrap justify-center gap-6 p-10 w-full max-w-5xl">
        <% if (files.length > 0) { %>
          <% files.forEach(function(val) { %>
            <div class="task-card w-64 px-4 py-5 rounded-md bg-zinc-800 shadow-md hover:shadow-lg transition">
              <h1 class="text-white text-xl tracking-tight"><%= val %></h1>
              <div class="flex w-full justify-between items-center mt-2">
              <a class="text-blue-700 inline-block text-sm" href="/tasks/<%= val %>">View Details</a>
              <a href="/edit/<%= val %>" class="text-zinc-500 inline-block mt-2 text-sm">Edit</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <h3 class="text-white">No tasks yet.</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
